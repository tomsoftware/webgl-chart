{
  "include": [
    "docs/.vuepress/**/*",
    "examples/**/*",
    "../packages/webgl-chart-vue/lib/**/*.ts",
    "../packages/webgl-chart/src/**/*.ts"
  ],
  "exclude": [
    "./dist/**",
    "./docs/.vuepress/dist/**"
  ],
  "compilerOptions": {
    "noEmitOnError": false,
    "diagnostics": true,
    "listEmittedFiles": false,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
  
    "types": ["vuepress/client-types", "@types/webgl2"],

    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "composite": true,

    "baseUrl": ".",
    "paths": {
      "@tomsoftware/webgl-chart-vue": ["../packages/webgl-chart-vue/src/index"],
      "@tomsoftware/webgl-chart": ["../packages/webgl-chart/src/index"]
    },

  }
}
